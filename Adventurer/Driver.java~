public class Driver{
    
    public static void main(String[] args){
	Adventurer a = new Adventurer("Mighty");
	Warrior b = new Warrior("Link");
	Wizard c = new Wizard("Gandalf");

	System.out.println(a.getName() + " has health " + a.getHP());
	System.out.println(b.getName() + " has health " + b.getHP());
	System.out.println(c.getName() + " has health " + c.getHP() + 
			   " and mana " + c.getMana());

    }
}